extends partials/base.jade

block title
	title Dispensador de Amor &amp; Amistad

block description
	meta(name="description" content="Dispensador de Amor & Amistad NESTLÃ‰" )

block content

	section.container-fluid

		div.row
			article.col-lg-10.col-md-10.col-sm-10.col-xs-12.col-lg-offset-1.col-md-offset-1.col-sm-offset-1

				h1.escogiste.escogiste-amor Amor

				form#postear(method="POST", name="postear")
					textarea#mensaje.form-control(placeholder="Escribe un mensaje", name="mensaje")

					div.postear
						p Compartir en: 
							//- button.fa.fa-facebook(href="", data-share="fb", type="button")
							button.fa.fa-twitter(href="", data-share="tw", type="button")


				p.text-center Estos son los mensajes de AMOR que nos han compartido.



		div.row
			{#foreach from=$tweets item=tweet#}
			
			article.col-lg-6.col-md-6.col-md-6.col-sm-6.col-xs-12.box.box-amistad
				div.single
					div.img-tweet
						img.img-tweet.img-responsive(src="", alt="")

					div.img-producto
						img.img-responsive(src="images/deditos.png", width="80")
					
					h3 #YoCompartoAmor


					p.tweet.
						{#$tweet->tweet#}

					div.barra-nombre

						img.perfil.img-circle.img-responsive(src="{#$tweet->avatar#}", width="50")

						p.nombre-perfil {#$tweet->nombreUsuario#} | @{#$tweet->arroba#}


			{#/foreach#}




