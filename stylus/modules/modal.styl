.modal
	&-content
		background-color transparent
		box-shadow none
		border none
		
	&-header
		border 0
		min-height auto
		padding 0
		
		.close
			absolute top 0.5em right 0.5em
			background-color Rojo
			border-radius 100%
			float none
			font-size 1.3em
			height 1.5em
			opacity 0.99
			width @height
			z-index 10
		
	img
		box-shadow 0px 0px 5px 5px rgba(0, 0, 0, .25) 