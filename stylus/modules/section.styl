#buzon
	height 100%
	margin-bottom -0.35em
	width @height

#contador
	font-size 1.3em
	float right

.bg-danger
	display none
	padding 0.5em

.btn-aqui
	cursor pointer
	margin-bottom 1em
	transition all -0.1s ease-in-out 0.2s
	
	&:active
		transform scale(0.9)
		

.escoger
	path("escoger.png")
	background-repeat no-repeat
	background-size 200%
	display block
	height 20em
	margin 0 auto
	text-indent -9999px
	transition all -0.1s ease-in-out 0.2s
	width 21em
	
	&-amistad
		background-position right top
		
	&:hover
		transform scale(1.2)
		

.escogiste
	path("escogiste.png")
	background-repeat no-repeat
	background-size 200%
	display block
	height 9em
	margin 0 auto
	text-indent -9999px
	transition all -0.1s ease-in-out 0.2s
	width 10em
	
	&-amistad
		background-position right center


.mecanica
	margin 1em auto
	display none
	
	ol, .paso
		counter-reset li
		position relative
		
		li
			list-style none
			font-size 1.4em
			margin-bottom 2em
			transition all ease-in-out 0.2s
			
			&:hover
				&:before
					transform scale(1.2)
					
			&:before
				relative left -0.2em
				background-color Azul
				border-radius 100%
				display inline-block
				color #fff 
				content counter(li)
				counter-increment li
				font-size 1.5em
				height 1.5em
				padding 0.1em
				text-align center
				transition all ease-in-out 0.2s
				width @height
				
			span
				display inline-block
		

		.cuatro
			
			&:before
				top -0.6em
			span
				max-width 18em	
		.dos
			margin-left 12em
			
			&:before
				top -0.8em
				
			span
				max-width 16em
				
		.tres
			margin-left 5em
			
			&:before
				top -1.4em
			
			span
				max-width 16em
				

		.uno
			margin-left 18em
			

	.destacado
		color Azul
		font-size 1.8em
		margin-top -0.6em
		


.scrollDown
	absolute top -2em right 5em
	border 0
	background-color transparent
	color Azul
	font-size 2.5em
	
	&:active, &:hover, &:focus
		outline 0 !important
		outline none !important
