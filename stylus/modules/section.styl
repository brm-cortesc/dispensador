#buzon
	height 100%
	margin-bottom -0.35em
	width @height

#contador
	font-size 1.3em
	float right

.btn-info
	display block
	margin 1em auto
	width 100%

.bg-danger
	display none
	padding 0.5em

.btn-aqui
	cursor pointer
	margin-bottom 1em
	transition all -0.1s ease-in-out 0.2s
	
	&:active
		transform scale(0.9)
		

.escoger
	path("escoger.png")
	background-repeat no-repeat
	background-size 200%
	display block
	height 20em
	margin 0 auto
	text-indent -9999px
	transition all -0.1s ease-in-out 0.2s
	width 21em
	
	&-amistad
		background-position right top
		
	&:hover
		transform scale(1.2)
		

.escogiste
	path("escogiste.png")
	background-repeat no-repeat
	background-size 200%
	display block
	height 9em
	margin 0 auto
	text-indent -9999px
	transition all -0.1s ease-in-out 0.2s
	width 10em
	
	&-amistad
		background-position right center


.mecanica
	margin 1em auto
	display none
	
	ol, .paso
		counter-reset li
		position relative
		
		li
			list-style none
			font-size 1.4em
			margin-bottom 2em
			transition all ease-in-out 0.2s
			
			&:hover
				&:before
					transform scale(1.2)
					
			&:before
				relative left -0.2em
				background-color Azul
				border-radius 100%
				display inline-block
				color #fff 
				content counter(li)
				counter-increment li
				font-size 1.5em
				height 1.5em
				padding 0.1em
				text-align center
				transition all ease-in-out 0.2s
				width @height
				
			span
				display inline-block
		

		.cuatro
			
			&:before
				top -0.6em
			span
				max-width 18em	
		.dos
			margin-left 12em
			
			&:before
				top -0.8em
				
			span
				max-width 16em
				
		.tres
			margin-left 5em
			
			&:before
				top -1.4em
			
			span
				max-width 16em
				

		.uno
			margin-left 18em
			
			&:before
				top -0.8em
			
			span
				max-width 16em
			

	.destacado
		color Azul
		font-size 1.8em
		margin-top -0.6em
		


.scrollDown
	absolute top -2em right 5em
	border 0
	background-color transparent
	color Azul
	font-size 2.5em
	
	&:active, &:hover, &:focus
		outline 0 !important
		outline none !important



/*Estilos para el TV*/

.tv
	.amistad
		.avatar
			background-position top left
		.franja
			background-color Azul
			
		.mensaje
			top 0
			padding-bottom 4em
			padding-top 15em
			
			.tweet
				&:before, &:after
					color Azul
			
		.user
			h2
				color Azul
			

	.amor
		.avatar
			background-position top right
		.franja
			background-color Rojo
		.mensaje
			top -4em
			padding-bottom 4em
			padding-top 15em
			
			.tweet
				&:before, &:after
					color Rojo
			
		.user
			h2
				color Rojo
			

	.franja
		box-shadow 0px 0px 15px 5px rgba(0, 0, 0, 0.35)
		color #fff
		padding 1em
		padding-bottom 3em
		position relative
		width 100%		
		z-index 2
		
		h1	
			font-size 6em
			
		.avatar
			absolute left 46%
			path("tv/btns.png")
			background-size 200%
			background-repeat no-repeat
			height 180px
			width @height
			z-index 2

.user
	margin 2em auto
	width 70%		
	

	.content-perfil, h2
		display inline-block
		vertical-align middle
		
	h2
		font-size 3em
		margin-left 1em
		
	.content-perfil
		max-height 16em
		max-width @max-height
		overflow hidden

.select
	display inline-block
	height 39.7em
	width 55%
	
	&-amistad
		absolute bottom 0 right 0
		path("tv/azul.png")
		background-size 100%
		background-repeat no-repeat
		display block
		z-index 1
		
	&-amor
		absolute bottom 0 left 0
		path("tv/rojo.png")
		background-size 100%
		background-repeat no-repeat
		display block
		z-index 2
		

	.img
		&-responsive
			path("tv/btns.png")
			background-repeat no-repeat
			height 277px
			position relative
			width @height	
			
	.amor
		background-position top right
		left 30%	
		top 19%
		
	

	.amistad
		background-position top left
		left 46%
		top 19%
		
.mensaje
	background-color: rgba(255, 255, 255, 0.9)
	border-radius 3em
	box-shadow 0px 0px 19px 5px rgba(0,0,0,0.4)
	padding 3em
	padding-bottom 15em
	relative top 25em
	text-align center
	

	.tweet
		color #000
		font-size 4em
		margin 0 auto
		max-width 27em
		
		&:before, &:after
			content " '' "
			display inline-block

